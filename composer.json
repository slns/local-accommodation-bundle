{
    "name": "slns/local-demo-bundle",
    "description": "Um bundle de exemplo reutilizÃ¡vel para Symfony.",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LocalDemoBundle\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^7.0 || ^7.3",
        "symfony/twig-bundle": "^7.3",
        "symfony/routing": "^7.3",
        "symfony/http-foundation": "^7.3"
    },
    "scripts": {
        "post-install-cmd": [
            "php scripts/copy_routes.php",
            "php scripts/notify_services.php"
        ],
        "post-update-cmd": [
            "php scripts/copy_routes.php",
            "php scripts/notify_services.php"
        ],
        "post-uninstall-cmd": [
            "php scripts/remove_routes.php"
        ]
    }
}