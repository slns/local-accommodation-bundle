{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white/10 backdrop-blur-md border border-white/20 p-8 rounded-lg shadow-lg">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-white">
                {{ 'local_accommodation.accommodations.delete_title'|trans }}
            </h1>
            <p class="text-white/70 text-sm mt-1">
                {{ 'local_accommodation.accommodations.delete_subtitle'|trans({ '%name%': accommodation.name }) }}
            </p>
        </div>
        <form method="post" class="flex flex-col space-y-2">
            <button class="bg-red-500/80 hover:bg-red-600/90 border border-red-400 text-white rounded-lg px-4 py-2 w-full font-medium transition-all duration-300 flex items-center justify-center space-x-2">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span>
                    {{ 'local_accommodation.accommodations.delete_action'|trans }}
                </span>
            </button>
            <a href="{{ path('local_accommodation_accommodations') }}" class="bg-white/10 hover:bg-white/20 border border-white/20 text-white rounded-lg px-4 py-2 w-full block text-center transition-all duration-300">
                {{ 'local_accommodation.accommodations.cancel_action'|trans }}
            </a>
        </form>
    </div>
{% endblock %}
