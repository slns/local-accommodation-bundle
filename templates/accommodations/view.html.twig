{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white dark:bg-gray-900 p-8 rounded shadow">
        <h1 class="text-xl font-bold mb-6 text-gray-800 dark:text-gray-100">
            {{ 'local_accommodation.accommodations.view_title'|trans }}
        </h1>
        <ul class="mb-6">
            <li>
                <strong>
                    {{ 'local_accommodation.accommodations.name'|trans }}
                    :
                </strong>
                {{ accommodation.name }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.accommodations.address'|trans }}
                    :
                </strong>
                {{ accommodation.address }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.accommodations.description'|trans }}
                    :
                </strong>
                {{ accommodation.description }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.accommodations.capacity'|trans }}
                    :
                </strong>
                {{ accommodation.capacity }}
            </li>
        </ul>
        <a href="{{ path('local_accommodation_accommodations') }}" class="btn btn-secondary w-full">
            {{ 'local_accommodation.accommodations.back'|trans }}
        </a>
    </div>
{% endblock %}
