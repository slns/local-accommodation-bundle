{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white/10 backdrop-blur-md border border-white/20 p-8 rounded-lg shadow-lg">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-white">
                {{ 'local_accommodation.consumables.view_title'|trans }}
            </h1>
            <p class="text-white/70 text-sm mt-1">
                {{ 'local_accommodation.consumables.view_subtitle'|trans }}
            </p>
        </div>
        <ul class="mb-6">
            <li>
                <strong>
                    {{ 'local_accommodation.consumables.item'|trans }}
                    :
                </strong>
                {{ consumable.item }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.consumables.quantity'|trans }}
                    :
                </strong>
                {{ consumable.quantity }}
            </li>
        </ul>
        <a href="{{ path('local_accommodation_consumables') }}" class="btn btn-secondary w-full">
            {{ 'local_accommodation.consumables.back'|trans }}
        </a>
    </div>
{% endblock %}
