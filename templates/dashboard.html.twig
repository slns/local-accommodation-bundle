{# Integra com o dashboard principal #}
{% extends 'dashboard/base.html.twig' %}

{% block title %}
    {{ 'local_accommodation.dashboard.title'|trans }}
{% endblock %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">
        {{ 'local_accommodation.dashboard.title'|trans }}
    </h1>
    <div class="bg-white/10 rounded-lg p-6 mb-4">
        <p class="text-lg font-semibold">
            {{ 'local_accommodation.dashboard.total'|trans }}
            :
            {{ dummyData.total }}
        </p>
        <p class="text-white/70">
            {{ 'local_accommodation.dashboard.message'|trans({ '%message%': dummyData.message }) }}
        </p>
    </div>
{% endblock %}
