{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white/10 backdrop-blur-md border border-white/20 p-8 rounded-lg shadow-lg">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-white">
                {{ 'local_accommodation.employees.view_title'|trans }}
            </h1>
            <p class="text-white/70 text-sm mt-1">
                {{ 'local_accommodation.employees.view_subtitle'|trans }}
            </p>
        </div>
        <ul class="mb-6">
            <li>
                <strong>
                    {{ 'local_accommodation.employees.name'|trans }}
                    :
                </strong>
                {{ employee.name }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.employees.role'|trans }}
                    :
                </strong>
                {{ employee.role }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.employees.email'|trans }}
                    :
                </strong>
                {{ employee.email }}
            </li>
        </ul>
        <a href="{{ path('local_accommodation_employees') }}" class="btn btn-secondary w-full">
            {{ 'local_accommodation.employees.back'|trans }}
        </a>
    </div>
{% endblock %}
