{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white dark:bg-gray-900 p-8 rounded shadow">
        <h1 class="text-xl font-bold mb-6 text-gray-800 dark:text-gray-100">
            {{ 'local_accommodation.guests.view_title'|trans }}
        </h1>
        <ul class="mb-6">
            <li>
                <strong>
                    {{ 'local_accommodation.guests.name'|trans }}
                    :
                </strong>
                {{ guest.name }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.guests.email'|trans }}
                    :
                </strong>
                {{ guest.email }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.guests.phone'|trans }}
                    :
                </strong>
                {{ guest.phone }}
            </li>
        </ul>
        <a href="{{ path('local_accommodation_guests') }}" class="btn btn-secondary w-full">
            {{ 'local_accommodation.guests.back'|trans }}
        </a>
    </div>
{% endblock %}
