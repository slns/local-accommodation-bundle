{% extends '@LocalAccommodation/base.html.twig' %}

{% block body %}
    <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Guests</h1>
    <a href="{{ path('local_accommodation_hospedes_new') }}" class="btn btn-success">New Guest</a>
    </div>
    <div class="overflow-x-auto rounded shadow">
        <table class="min-w-full table-auto divide-y divide-gray-200 bg-white">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Phone</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
            {% for guest in hospedes %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2">{{ guest.id }}</td>
                    <td class="px-4 py-2">{{ guest.name }}</td>
                    <td class="px-4 py-2">{{ guest.email }}</td>
                    <td class="px-4 py-2">{{ guest.phone }}</td>
                    <td class="px-4 py-2 space-x-2">
                        <a href="{{ path('local_accommodation_hospedes_edit', {'id': guest.id}) }}" class="btn btn-primary">Edit</a>
                        <a href="{{ path('local_accommodation_hospedes_delete', {'id': guest.id}) }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="5" class="px-4 py-2 text-center text-gray-400">No guests found.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
