{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white dark:bg-gray-900 p-8 rounded shadow">
        <h1 class="text-xl font-bold mb-6 text-gray-800 dark:text-gray-100">
            {{ 'local_accommodation.maintenance.view_title'|trans }}
        </h1>
        <ul class="mb-6">
            <li>
                <strong>
                    {{ 'local_accommodation.maintenance.issue'|trans }}
                    :
                </strong>
                {{ maintenance.issue }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.maintenance.reported_at'|trans }}
                    :
                </strong>
                {{ maintenance.reportedAt|date('Y-m-d H:i') }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.maintenance.status'|trans }}
                    :
                </strong>
                {{ maintenance.status }}
            </li>
        </ul>
        <a href="{{ path('local_accommodation_maintenance') }}" class="btn btn-secondary w-full">
            {{ 'local_accommodation.maintenance.back'|trans }}
        </a>
    </div>
{% endblock %}
