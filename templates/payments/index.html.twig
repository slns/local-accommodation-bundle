{% extends 'dashboard/base.html.twig' %}
{% block content %}
    <h1 class="text-2xl font-bold mb-6">
        {{ 'local_accommodation.payments.title'|trans }}
    </h1>
    <div class="rounded-lg bg-white/10 backdrop-blur-md border border-white/20 shadow-lg overflow-hidden w-full">
        <div class="overflow-x-auto">
            <table class="w-full min-w-full table-fixed">
                <thead>
                    <tr class="border-b border-white/20">
                        <th class="text-left py-4 px-4 text-white/80 font-medium text-sm cursor-pointer hover:bg-white/5 transition-colors duration-200 uppercase">
                            {{ 'local_accommodation.payments.amount'|trans }}
                        </th>
                        <th class="text-left py-4 px-4 text-white/80 font-medium text-sm cursor-pointer hover:bg-white/5 transition-colors duration-200 uppercase">
                            {{ 'local_accommodation.payments.method'|trans }}
                        </th>
                        <th class="text-left py-4 px-4 text-white/80 font-medium text-sm cursor-pointer hover:bg-white/5 transition-colors duration-200 uppercase">
                            {{ 'local_accommodation.payments.date'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for payment in payments %}
                        <tr class="border-b border-white/10 hover:bg-white/5 transition-colors duration-200">
                            <td class="px-4 py-3 text-white">
                                {{ payment.amount }}
                            </td>
                            <td class="px-4 py-3 text-white">
                                {{ payment.method }}
                            </td>
                            <td class="px-4 py-3 text-white">
                                {{ payment.date|date('Y-m-d H:i') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-4 py-3 text-center text-white/60">
                                {{ 'local_accommodation.payments.empty'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
