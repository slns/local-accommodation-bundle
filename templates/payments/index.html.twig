{% extends 'dashboard/base.html.twig' %}
{% block content %}
    <h1 class="text-2xl font-bold mb-6">
        {{ 'local_accommodation.payments.title'|trans }}
    </h1>
    <table class="min-w-full table-auto bg-white">
        <thead>
            <tr>
                <th>
                    {{ 'local_accommodation.payments.amount'|trans }}
                </th>
                <th>
                    {{ 'local_accommodation.payments.method'|trans }}
                </th>
                <th>
                    {{ 'local_accommodation.payments.date'|trans }}
                </th>
            </tr>
        </thead>
        <tbody>
            {% for payment in payments %}
                <tr>
                    <td>
                        {{ payment.amount }}
                    </td>
                    <td>
                        {{ payment.method }}
                    </td>
                    <td>
                        {{ payment.date|date('Y-m-d H:i') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        {{ 'local_accommodation.payments.empty'|trans }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
