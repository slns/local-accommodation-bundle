{% extends '@LocalAccommodation/base.html.twig' %}
{% block body %}
<h1 class="text-2xl font-bold mb-6">Payments</h1>
<table class="min-w-full table-auto bg-white">
    <thead><tr><th>Amount</th><th>Method</th><th>Date</th></tr></thead>
    <tbody>
    {% for payment in payments %}
        <tr>
            <td>{{ payment.amount }}</td>
            <td>{{ payment.method }}</td>
            <td>{{ payment.date|date('Y-m-d H:i') }}</td>
        </tr>
    {% else %}
        <tr><td colspan="3">No payments found.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
