{% extends 'dashboard/base.html.twig' %}
{% block content %}
    <div class="flex items-center justify-between mb-6">
        <div>
            <h1 class="text-2xl font-bold text-white">
                {{ 'local_accommodation.payments.title'|trans }}
            </h1>
            <p class="text-white/70 text-sm mt-1">
                {{ 'local_accommodation.payments.subtitle'|trans }}
            </p>
        </div>
        <a href="{{ path('local_accommodation_payments_new') }}" class="bg-white/20 hover:bg-white/30 backdrop-blur-lg rounded-lg px-4 py-2 border border-white/20 text-white text-sm font-medium transition-all duration-300 flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>
                {{ 'local_accommodation.payments.new'|trans }}
            </span>
        </a>
    </div>
    <div class="rounded-lg bg-white/10 backdrop-blur-md border border-white/20 shadow-lg overflow-hidden w-full">
        <div class="overflow-x-auto">
            <table class="w-full min-w-full table-fixed">
                <thead>
                    <tr class="border-b border-white/20">
                        <th class="text-left py-4 px-4 text-white/80 font-medium text-sm cursor-pointer hover:bg-white/5 transition-colors duration-200 uppercase">
                            {{ 'local_accommodation.payments.amount'|trans }}
                        </th>
                        <th class="text-left py-4 px-4 text-white/80 font-medium text-sm cursor-pointer hover:bg-white/5 transition-colors duration-200 uppercase">
                            {{ 'local_accommodation.payments.method'|trans }}
                        </th>
                        <th class="text-left py-4 px-4 text-white/80 font-medium text-sm cursor-pointer hover:bg-white/5 transition-colors duration-200 uppercase">
                            {{ 'local_accommodation.payments.date'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for payment in payments %}
                        <tr class="border-b border-white/10 hover:bg-white/5 transition-colors duration-200">
                            <td class="px-4 py-3 text-white">
                                {{ payment.amount }}
                            </td>
                            <td class="px-4 py-3 text-white">
                                {{ payment.method }}
                            </td>
                            <td class="px-4 py-3 text-white">
                                {{ payment.date|date('Y-m-d H:i') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="px-4 py-3 text-center text-white/60">
                                {{ 'local_accommodation.payments.empty'|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
