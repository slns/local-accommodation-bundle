{% extends 'dashboard/base.html.twig' %}

{% block content %}
    <div class="max-w-lg mx-auto bg-white/10 backdrop-blur-md border border-white/20 p-8 rounded-lg shadow-lg">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-white">
                {{ 'local_accommodation.payments.view_title'|trans }}
            </h1>
            <p class="text-white/70 text-sm mt-1">
                {{ 'local_accommodation.payments.view_subtitle'|trans }}
            </p>
        </div>
        <ul class="mb-6">
            <li>
                <strong>
                    {{ 'local_accommodation.payments.amount'|trans }}
                    :
                </strong>
                {{ payment.amount }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.payments.method'|trans }}
                    :
                </strong>
                {{ payment.method }}
            </li>
            <li>
                <strong>
                    {{ 'local_accommodation.payments.date'|trans }}
                    :
                </strong>
                {{ payment.date|date('Y-m-d H:i') }}
            </li>
        </ul>
        <a href="{{ path('local_accommodation_payments') }}" class="btn btn-secondary w-full">
            {{ 'local_accommodation.payments.back'|trans }}
        </a>
    </div>
{% endblock %}
